<h1>Lista de Categorias</h1>
<a href="/admin/categorias/add"><button class="btn btn-success">(+) Adicionar Categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data de criação: {{date}}</small>
            <br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-warning mt-2">Editar Categoria</button></a>
            <form action="/admin/categorias/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger mt-2">(x) Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma categoria registrada.</h4>
{{/each}}